# Development Dockerfile for Vector Log Hub
FROM ubuntu:24.04

# Set environment variables
ENV DEBIAN_FRONTEND=noninteractive
ENV VECTOR_VERSION=0.34.1
ENV GRAFANA_VERSION=10.2.0

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    wget \
    gnupg \
    software-properties-common \
    build-essential \
    git \
    vim \
    nano \
    htop \
    net-tools \
    telnet \
    netcat-openbsd \
    jq \
    python3 \
    python3-pip \
    python3-dev \
    pkg-config \
    libssl-dev \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Install Rust
RUN curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh -s -- -y
ENV PATH="/root/.cargo/bin:${PATH}"

# Install C++ development tools
RUN apt-get update && apt-get install -y \
    g++ \
    cmake \
    libspdlog-dev \
    && rm -rf /var/lib/apt/lists/*

# Install Vector
RUN curl -1sLf 'https://repositories.timber.io/public/vector/cfg/setup/bash.deb.sh' | bash && \
    apt-get update && \
    apt-get install -y vector=${VECTOR_VERSION}-1 && \
    rm -rf /var/lib/apt/lists/*

# Install Grafana
RUN wget -q -O /usr/share/keyrings/grafana.key https://apt.grafana.com/gpg.key && \
    echo "deb [signed-by=/usr/share/keyrings/grafana.key] https://apt.grafana.com stable main" | tee -a /etc/apt/sources.list.d/grafana.list && \
    apt-get update && \
    apt-get install -y grafana=${GRAFANA_VERSION} && \
    rm -rf /var/lib/apt/lists/*

# Create directories for logs and configuration
RUN mkdir -p /var/log/vector /etc/vector /etc/grafana/provisioning/datasources /etc/grafana/provisioning/dashboards

# Install Python dependencies for development
RUN pip3 install --break-system-packages \
    requests \
    asyncio \
    websockets \
    pytest \
    pytest-asyncio

# Set working directory
WORKDIR /workspace

# Expose ports
# 9000: Vector TCP input
# 8686: Vector API
# 3000: Grafana
EXPOSE 9000 8686 3000

# Copy startup script
COPY scripts/startup.sh /scripts/startup.sh
RUN chmod +x /scripts/startup.sh

# Default command
CMD ["/scripts/startup.sh"]